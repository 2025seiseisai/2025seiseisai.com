{
    "name": "2025seiseisai.com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "deploy": "node ./scripts/deploy.mjs",
        "dev": "next build",
        "build": "next start",
        "start": "next start",
        "lint": "next lint && stylelint \"src/**/*.(scss|less|css)\" && prettier --check .",
        "format": "next lint --fix && stylelint \"src/**/*.(scss|less|css)\" --fix && prettier --write .",
        "clean": "modclean --run",
        "upgrade": "npx ncu -u && npm install",
        "type-check": "prisma generate && tsc --noEmit",
        "update-blogs": "node ./scripts/generate-blog-data.mjs",
        "browser:chrome": "playwright test browser.test.mjs --headed --project=chromium",
        "browser:firefox": "playwright test browser.test.mjs --headed --project=firefox",
        "browser:safari": "playwright test browser.test.mjs --headed --project=webkit",
        "browser:mobile-chrome": "playwright test browser.test.mjs --headed --project=Mobile-Chrome",
        "browser:mobile-safari": "playwright test browser.test.mjs --headed --project=Mobile-Safari",
        "browser:local-edge": "playwright test browser.test.mjs --headed --project=Microsoft-Edge",
        "browser:local-chrome": "playwright test browser.test.mjs --headed --project=Google-Chrome",
        "prisma:generate": "prisma generate",
        "prisma:db-pull": "prisma db pull",
        "prisma:db-push": "prisma db push",
        "prisma:studio": "prisma studio"
    },
    "dependencies": {
