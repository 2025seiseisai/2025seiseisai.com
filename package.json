{
    "name": "2025seiseisai.com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "deploy": "sh ./scripts/deploy.sh",
        "dev": "node --env-file=.env.development prepare.mjs && npm install && opener http://localhost:3000 && next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "modclean --run",
        "type-check": "tsc --noEmit",
        "update-blogs": "node ./scripts/generate-blog-data.mjs",
        "browser:chrome": "playwright test browser.test.ts --headed --project=chromium",
        "browser:firefox": "playwright test browser.test.ts --headed --project=firefox",
        "browser:safari": "playwright test browser.test.ts --headed --project=webkit",
        "browser:mobile-chrome": "playwright test browser.test.ts --headed --project=Mobile-Chrome",
        "browser:mobile-safari": "playwright test browser.test.ts --headed --project=Mobile-Safari",
        "browser:local-edge": "playwright test browser.test.ts --headed --project=Microsoft-Edge",
        "browser:local-chrome": "playwright test browser.test.ts --headed --project=Google-Chrome"
    },
    "dependencies": {
        "@next/third-parties": "^15.3.1",
        "gray-matter": "^4.0.3",
        "holy-loader": "^2.3.13",
        "lottie-react": "^2.4.1",
        "mongodb": "^6.16.0",
        "next": "^15.3.1",
        "next-auth": "^5.0.0-beta.25",
        "next-mdx-remote": "^5.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-tweet": "^3.2.2",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "sharp": "^0.34.1",
        "tailwindcss": "^4.1.5",
        "three": "^0.176.0",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.52.0",
        "@svgr/webpack": "^8.1.0",
        "@tailwindcss/postcss": "^4.1.5",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/three": "^0.176.0",
        "@typescript-eslint/parser": "^8.31.1",
        "autoprefixer": "^10.4.21",
        "eslint": "^9",
        "eslint-config-next": "15.3.1",
        "eslint-plugin-readable-tailwind": "^2.1.1",
        "modclean": "^3.0.0-beta.1",
        "opener": "^1.5.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^10.1.6",
        "prettier": "^3.5.3",
        "tsx": "^4.19.4",
        "typescript": "^5",
        "typescript-plugin-css-modules": "^5.1.0"
    }
}
