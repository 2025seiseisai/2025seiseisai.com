        "react-tweet": "^3.2.2",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "sharp": "^0.34.3",
        "tailwindcss": "^4.1.12",
        "three": "^0.179.1",
        "zod": "^4.1.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
