{
    "name": "2025seiseisai.com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "deploy": "sh ./scripts/deploy.sh",
        "dev": "node --env-file=.env.development prepare.mjs && npm install && opener http://localhost:3000 && next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint && stylelint \"src/**/*.(scss|less|css)\" && prettier --check .",
        "format": "next lint --fix && stylelint \"src/**/*.(scss|less|css)\" --fix && prettier --write .",
        "clean": "modclean --run",
        "type-check": "tsc --noEmit",
        "update-blogs": "node ./scripts/generate-blog-data.mjs",
        "browser:chrome": "playwright test browser.test.ts --headed --project=chromium",
        "browser:firefox": "playwright test browser.test.ts --headed --project=firefox",
        "browser:safari": "playwright test browser.test.ts --headed --project=webkit",
        "browser:mobile-chrome": "playwright test browser.test.ts --headed --project=Mobile-Chrome",
        "browser:mobile-safari": "playwright test browser.test.ts --headed --project=Mobile-Safari",
        "browser:local-edge": "playwright test browser.test.ts --headed --project=Microsoft-Edge",
        "browser:local-chrome": "playwright test browser.test.ts --headed --project=Google-Chrome"
    },
    "dependencies": {
        "@next/third-parties": "^15.3.4",
        "gray-matter": "^4.0.3",
        "holy-loader": "^2.3.13",
        "lottie-react": "^2.4.1",
        "mongodb": "^6.17.0",
        "next": "^15.3.4",
        "next-auth": "^5.0.0-beta.25",
        "next-mdx-remote": "^5.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-tweet": "^3.2.2",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "sharp": "^0.34.2",
        "tailwindcss": "^4.1.10",
        "three": "^0.177.0",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.53.1",
        "@svgr/webpack": "^8.1.0",
        "@tailwindcss/postcss": "^4.1.10",
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/three": "^0.177.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9",
        "eslint-config-next": "15.3.4",
        "eslint-plugin-better-tailwindcss": "^3.3.1",
        "modclean": "^3.0.0-beta.1",
        "opener": "^1.5.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^10.2.3",
        "prettier": "^3.5.3",
        "prettier-plugin-classnames": "^0.7.9",
        "stylelint": "^16.21.0",
        "stylelint-config-recess-order": "^7.1.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "tsx": "^4.20.3",
        "typescript": "^5",
        "typescript-plugin-css-modules": "^5.1.0"
    }
}
